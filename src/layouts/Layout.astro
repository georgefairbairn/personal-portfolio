---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
import ThemeIcon from "../components/ThemeIcon";
---

<html lang="en" data-theme="violet">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" sizes="32x32" href="https://res.cloudinary.com/neon-flights/image/upload/c_crop,g_south,h_0.9/c_fill,w_32,h_32/v1753641264/personal-website/profilepiccolor_g4p5t3.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="https://res.cloudinary.com/neon-flights/image/upload/c_crop,g_south,h_0.9/c_fill,w_16,h_16/v1753641264/personal-website/profilepiccolor_g4p5t3.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="https://res.cloudinary.com/neon-flights/image/upload/c_crop,g_south,h_0.9/c_fill,w_180,h_180/v1753641264/personal-website/profilepiccolor_g4p5t3.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&family=Squada+One&display=swap" rel="stylesheet">
		<style>
			:root {
				--font-hero: 'Bungee Shade', cursive;
				--font-heading: 'Squada One', cursive;
			}
		</style>
		<title>{title}</title>
	</head>
	<body style="background-color: var(--theme-bg); color: var(--theme-text); transition: background-color 0.3s ease, color 0.3s ease;">
		<div class="fixed top-4 right-4 z-50">
			<ThemeIcon client:load />
		</div>
		<main>
			<slot />
		</main>

		<script>
			// Initialize theme from localStorage on page load
			document.addEventListener('DOMContentLoaded', () => {
				const savedTheme = localStorage.getItem('theme') || 'violet';
				document.documentElement.setAttribute('data-theme', savedTheme);
			});
		</script>
	</body>
</html> 